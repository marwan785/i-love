@model HabitTracker.Models.Entites.User

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
    </dl>
</div>

<h4>Habits</h4>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Date</th>
            <th>Category</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Habits != null && Model.Habits.Any())
        {
            foreach (var habit in Model.Habits)
            {
                <tr>
                    <td>@habit.Name</td>
                    <td>@habit.Cdate.ToShortDateString()</td>
                    <td>@habit.Category.CName</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">No habits found for this user.</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-action="GetAllUsers">Back to List</a>
</div>
